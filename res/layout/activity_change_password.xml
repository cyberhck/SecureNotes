<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fossdevs.securenotes.ChangePassword" >

    <EditText
        android:id="@+id/oldPassword"
        android:layout_width="match_parent"
        android:hint="@string/oldPassword"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldPassword"
        android:layout_alignStart="@+id/oldPassword"
        android:layout_alignRight="@+id/oldPassword"
        android:layout_alignEnd="@+id/oldPassword"
        android:layout_below="@+id/oldPassword"
        android:ems="10"
        android:hint="@string/newPassword"
        android:inputType="textPassword" />
        <EditText
        android:id="@+id/reEnterNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPassword"
        android:layout_alignStart="@+id/newPassword"
        android:layout_alignRight="@+id/newPassword"
        android:layout_alignEnd="@+id/newPassword"
        android:layout_below="@+id/newPassword"
        android:ems="10"
        android:hint="@string/reEnterNewPassword"
        android:inputType="textPassword" />

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reEnterNewPassword"
            android:layout_alignStart="@+id/reEnterNewPassword"
            android:layout_alignRight="@+id/reEnterNewPassword"
            android:layout_alignEnd="@+id/reEnterNewPassword"
            android:layout_below="@+id/reEnterNewPassword"
            android:text="@string/changePasswordBtn" />
    
</RelativeLayout>
